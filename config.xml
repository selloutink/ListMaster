<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id          = "io.github.selloutink"
        versionCode = "10" 
        version     = "0.1.0" >

    <!-- versionCode is optional and Android only -->

    <name>Listmaster</name>

    <description>
        Een boodschappenlijst die magisch goed werkt.
    </description>

    <author href="https://build.phonegap.com" email="selloutink@gmail.com">
        Team Sellout Ink.
    </author>
	
	<gap:platform name="android" />
	<gap:plugin name="com.phonegap.plugins.barcodescanner"/>
	<gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" />
    <feature name="http://api.phonegap.com/1.0/device" />
	<gap:plugin name="org.apache.cordova.file" />
	<gap:plugin name="org.apache.cordova.splashscreen" />

    <preference name="phonegap-version" value="3.1.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="true" />
    <preference name="webviewbounce"    value="false" />
	<preference name="splashscreen" value="foo" />
	<access origin="*" />
	
	<icon src="images/logo.png" gap:platform="android" gap:density="ldpi" />
	<icon src="images/logo.png" gap:platform="android" gap:density="mdpi" />
	<icon src="images/logo.png" gap:platform="android" gap:density="hdpi" />
	<icon src="images/logo.png" gap:platform="android" gap:density="xhdpi" />


</widget>